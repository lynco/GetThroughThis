.search
  .container
    %h1
      %span 
        = @results.count
      resources found for
    %span{class: "label search-label"} 
      = session[:search_query]
    %hr
    .row
      .col-md-2
        .configuration
          .header.text-center
            = image_tag("filter-icon.png", class: "filter")
            Filter Results
          .types
            %h4 Type
            %ul.list-unstyled
              %li 
                %input{type: "checkbox"} Mobile App
              %li 
                %input{type: "checkbox"} Web Resource
              %li 
                %input{type: "checkbox"} In-person Service
          %span{class: "input-group-btn"}
            %button.btn.btn-primary Filter
        .configuration
          .header.text-center
            = image_tag("plus-icon.png", class: "filter")
            Add Resource
          .bottom
            %p Are we missing something from these results?
            %p Suggest a resource to add.
          %span{class: "input-group-btn"}
            %button.btn.btn-default Support

      .col-md-10
        .row
          - @results.each do |result|
            .col-md-6
              .resource
                .content
                  .icon
                    = image_tag("app-icon.jpg")
                  .copy
                    %h1 
                      = result.title
                    %p 
                      With Circle of 6, you can connect with your friends to stay close, stay safe and prevent violence before it happens. The circle of 6 app
                      %span.more ... more
                    .labels 
                      - result.tags.each do |tag|
                        %span{class: "label filter-label"} #{tag.name}
                %p.read-more 
                  = link_to 'Read More', result
